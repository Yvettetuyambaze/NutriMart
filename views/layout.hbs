                <li>
                    <a href="/logout"><i class="icon ion-ios-log-out"></i> Logout</a>
                </li>
            </ul>
        </nav>

        <!-- Page Content -->
        <div id="content">
            <!-- Header -->
            <nav class="navbar navbar-dark bg-dark sticky-top">
                <button type="button" id="sidebarCollapse" class="btn btn-info">
                    <i class="fa fa-bars"></i>
                </button>
            </nav>

            <!-- Main Content -->
            <div class="container-fluid">
                {{{body}}}
            </div>

            <!-- Footer -->
            <footer class="page-footer font-small mdb-color darken-3 pt-4 foot" style="background-color:black">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-3 text-secondary">
                            <h6>About Us</h6>
                            <hr style="background-color: tomato">
