<div class="body">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 rounded cal">
                <img class="rounded-circle profile-pic" src="{{data.profilePic}}" width="350px" height="350px">
                <div class="userName name">{{data.fname}} {{data.lname}}</div>
                <div class="card-footer rounded font-weight-bold border-dark h4 text-capitalize"><i class="icon ion-md-megaphone"></i> {{data.status}}</div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt-5">
    <div class="container p-3">
        <div class="ml-2 p-2" style="background-color: #0069D9; color:white">
            <b>Basic Profile Info.</b>
        </div>

        <!-- Name -->
        <div class="ml-3 h5 p-2 profile">
            <span class="h4 font-weight-bold">Name:</span> {{data.fname}} {{data.lname}}
            <button class="btn btn-transparent" id="ename"><i class="icon ion-md-create"></i></button>
            <button class="btn btn-transparent" id="cname"><i class="icon ion-md-close"></i></button>
            <div id="name" class="ml-4 mr-4 mt-2">
                <form action="/editName" method="POST">
                    <div class="form-row">
                        <div class="col-sm">
                            <input type="text" class="form-control" placeholder="First name" name="fname" required>
                        </div>
                        <div class="col-sm">
                            <input type="text" class="form-control" placeholder="Last name" name="lname" required>
                        </div>
                        <button type="submit" class="btn btn-primary ml-2">Update</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Email -->
        <div class="ml-3 h5 p-2 profile">
            <span class="h4 font-weight-bold">E-mail:</span> {{data.email}}
            <button class="btn btn-transparent" id="eml"><i class="icon ion-md-create"></i></button>
            <button class="btn btn-transparent" id="cmail"><i class="icon ion-md-close"></i></button>
            <div id="mail" class="ml-4 mr-4 mt-2">
                <form action="/editMail" method="POST">
                    <div class="form-row">
                        <div class="col-sm">
                            <input type="email" class="form-control" placeholder="E-mail" name="email" required>
                        </div>
                        <button type="submit" class="btn btn-primary ml-2">Update</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Date of Birth -->
        <div class="ml-3 h5 p-2 profile">
            <span class="h4 font-weight-bold">Date of Birth:</span> {{data.dob}}
            <button class="btn btn-transparent" id="edob"><i class="icon ion-md-create"></i></button>
            <button class="btn btn-transparent" id="cdob"><i class="icon ion-md-close"></i></button>
            <div id="dob" class="ml-4 mr-4 mt-2">
                <form action="/editDob" method="POST">
                    <div class="form-row">
                        <div class="col-sm">
                            <input type="date" class="form-control" name="dob" required>
                        </div>
                        <button type="submit" class="btn btn-primary ml-2">Update</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Gender -->
        <div class="ml-3 h5 p-2 profile">
            <span class="h4 font-weight-bold">Gender:</span> {{data.gender}}
            <button class="btn btn-transparent" id="egen"><i class="icon ion-md-create"></i></button>
            <button class="btn btn-transparent" id="csex"><i class="icon ion-md-close"></i></button>
            <div id="gender" class="ml-4 mr-4 mt-2">
                <form action="/editSex" method="POST">
                    <div class="form-row">
                        <div class="col-sm">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gender" id="male" value="male" required>
                                <label class="form-check-label" for="male">Male</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gender" id="female" value="female" required>
                                <label class="form-check-label" for="female">Female</label>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary ml-2">Update</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Weight and Height -->
        <div class="ml-3 h5 p-2 profile">
            <span class="h4 font-weight-bold">Weight:</span> {{data.weight}} kg &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <span class="h4 font-weight-bold">Height:</span> {{data.height}} m
            <button class="btn btn-transparent" id="ewh"><i class="icon ion-md-create"></i></button>
            <button class="btn btn-transparent" id="cwh"><i class="icon ion-md-close"></i></button>
            <div id="wh" class="ml-4 mr-4 mt-2">
                <form action="/editWh" method="POST">
                    <div class="form-row">
                        <div class="col-sm">
                            <input type="number" class="form-control" placeholder="Weight (kg)" name="weight" required>
                        </div>
                        <div class="col-sm">
                            <input type="number" class="form-control" placeholder="Height (m)" step="0.01" min="0" max="10" name="height" required>
                        </div>
                        <button type="submit" class="btn btn-primary ml-2">Update</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Status -->
        <div class="ml-3 h5 p-2 profile">
            <span class="h4 font-weight-bold">My Status:</span> {{data.status}}
            <button class="btn btn-transparent" id="estat"><i class="icon ion-md-create"></i></button>
            <button class="btn btn-transparent" id="cstat"><i class="icon ion-md-close"></i></button>
            <div id="status" class="ml-4 mr-4 mt-2">
                <form action="/editStatus" method="POST">
                    <div class="form-row">
                        <div class="col-sm">
                            <textarea class="form-control" rows="3" placeholder="What's your status!" name="status" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary ml-2">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
